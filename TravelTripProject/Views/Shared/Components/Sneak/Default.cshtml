@using TravelTripProject.Models;
@using TravelTripProject.Data.Entities;

@model List<Blog>


@foreach (var item in Model)
{
    <div class="left">
        <div class="bot-left">
            <img src="@item.BlogImage" alt="" />
        </div>
        <div class="left-text">
            <h4> @item.Title </h4>
            <span class="text"> @item.Date.ToShortDateString()</span>
            <p> @item.Description.Substring(0,318)  </p>
            <p> <a href="/Blog/BlogDetail/@item.Id"> <span class="read"> Devamını Oku >> </span></a> </p>
        </div>
    </div>
}
