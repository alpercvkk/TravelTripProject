@using TravelTripProject.Models;
@using TravelTripProject.Data.Entities;


@model List<Blog>

<div class="padding1">
    <h4> Favori Yerlerim <h4>
           <div class="box-left">
                @foreach (var item in Model)
                {
                    <div class="bot-img">
                        <a href="/Blog/BlogDetail/@item.Id">
                            <img src="@item.BlogImage" alt="Blog Image" />
                        </a>
                    </div>
                    <div class="bot-desc">
                        <p> @item.Description.Substring(0,75).ToString() ...  </p>
                    </div>
                    <div class="clear"></div>
                }
            </div>
            @await Component.InvokeAsync("BestPlaces2")
</div>