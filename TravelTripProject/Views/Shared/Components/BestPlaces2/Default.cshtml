@using TravelTripProject.Data.Entities;
@using TravelTripProject.Models;


@model List<Blog>

<div class="box1-left">

    @foreach (var item in Model)
    {
        <div class="bot-img">
            <a href="/Blog/BlogDetail/@item.Id">
                <img src="@item.BlogImage" alt="Blog Image" />
            </a>
        </div>
        <div class="bot-desc1">
            <p>@item.Description.Substring(0,75).ToString() ... </p>
        </div>
        <div class="clear"></div>
    }
</div>

