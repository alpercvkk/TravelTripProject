@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<title>W3.CSS</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<body>
    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:13%">
        <h3 class="w3-bar-item">Menüler</h3>
        <a asp-controller="Admin" asp-action="Index" class="w3-bar-item w3-button">Bloglar</a>
        <a asp-controller="Comment" asp-action="Index" class="w3-bar-item w3-button">Yorumlar</a>
        <a asp-controller="Admin" asp-action="Contact" class="w3-bar-item w3-button">İletişim</a>
        <a asp-controller="Admin" asp-action="About" class="w3-bar-item w3-button">Hakkımızda</a>
        <a asp-controller="Default" asp-action="Index" class="w3-bar-item w3-button">Siteye Git</a>
    </div>

    <!-- Page Content -->
    <div style="margin-left:13%">

        <div class="w3-container w3-teal">
            <h3>Admin Yönetim Paneli</h3>
        </div>



        <div class="w3-container">
            @RenderBody()
        </div>

    </div>



</body>
</html>
