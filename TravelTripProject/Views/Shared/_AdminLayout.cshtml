@using Microsoft.CodeAnalysis.Differencing;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>W3.CSS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .w3-sidebar,
        .w3-sidebar.w3-bar-block {
            width: 15%;
        }

        .w3-teal{
            color: #fff !important;
            background-color:#212529 !important;
        }

        .w3-container {
            margin-left: 14%;
            width: 87%;
        }

        .dropdown {
            position: absolute;
            right: 20px;
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block">
        <h3 class="w3-bar-item">Menüler</h3>
        <a asp-controller="Admin" asp-action="Index" class="w3-bar-item w3-button">Bloglar</a>
        <a asp-controller="Admin" asp-action="CommentList" class="w3-bar-item w3-button">Yorumlar</a>
        <a asp-controller="Admin" asp-action="ContactUsList" class="w3-bar-item w3-button">İletişim</a>
        <a asp-controller="Admin" asp-action="AboutUsList" class="w3-bar-item w3-button">Hakkımızda</a>
        <a asp-controller="Default" asp-action="Index" class="w3-bar-item w3-button">Siteye Git</a>
    </div>

    <!-- Page Content -->
    <div class="w3-container">
        <div class="w3-teal">
            <h2 style="padding:8px; padding-left:20px;  display:inline-block;">Admin Yönetim Paneli</h2>
            <div class="dropdown" style="display:inline-block; position:absolute; right:20px; top:12px;">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <span>  @User?.Identity?.Name </span>
                    }
                    else
                    {
                        <span>Misafir</span>
                    }
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="dropdown-item" asp-controller="Account" asp-action="LogOut">Oturumu Kapat</a>
                    }
                    else
                    {
                        <a class="dropdown-item" asp-controller="Account" asp-action="Login">Oturum Aç</a>
                    }
                </div>

            </div>
        </div>
    </div>
    <div class="w3-container">
        @RenderBody()
    </div>
</body>

</html>




