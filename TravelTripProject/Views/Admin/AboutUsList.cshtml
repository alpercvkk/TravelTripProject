@using TravelTripProject.Data.Entities
@using TravelTripProject.Models

@{
    ViewData["Title"] = "AboutUsList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<AboutUs>

<style>
    .container {
        padding-left: 80px;
        padding-right: 80px;
    }
</style>
<br />
<h2 style="margin-left: 20px;">  Hakkımızda Sayfası   </h2>
<div class="container">
   
    <br />

    <div class="row mb-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th> Id </th>
                    <th> Görsel Url </th>
                    <th> Açıklama </th>
                    <th> İşlemler </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @item.Id  </td>
                        <td> @item.ImageUrl </td>
                        <td style="color:darkblue" > @(item.Description.Length > 120 ? item.Description.Substring(0, 120) + "..." : item.Description) </td>

                        <td> <a asp-action="UpdateAboutUs" asp-controller ="Admin"  asp-route-id ="@item.Id" class="btn btn-primary"> Güncelle </a> </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


