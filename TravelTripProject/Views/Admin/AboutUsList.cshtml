@using TravelTripProject.Data.Entities
@using TravelTripProject.Models

@{
    ViewData["Title"] = "AboutUsList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<AboutUs>

<style>
    .container {
        padding-left: 80px;
        padding-right: 80px;
    }
</style>
<br />

<div class="container">
    <h2>  Hakkımızda Sayfası   </h2>
    <br />

    <div class="row mb-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th> Id </th>
                    <th> Görsel Url </th>
                    <th> Açıklama </th>
                    <th> İşlemler </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @item.Id  </td>
                        <td> @item.ImageUrl </td>
                        <td> @item.Description </td>
                        <td> <a class="btn btn-primary"> Güncelle </a> </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


