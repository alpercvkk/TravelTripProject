@using TravelTripProject.Data.Entities;
@using TravelTripProject.Models;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<Blog>

<style>
    .container {
        padding-left: 80px;
        padding-right: 80px;
    }
</style>

<h2> Blog Listesi</h2>



<div class="container">

    <div class="row mb-3 justify-content-end">
        <div class="col-auto ">
            <a asp-action="Create" asp-controller="Admin" type="button" class="btn btn-primary">Yeni Blog Ekle </a>
        </div>
    </div>

    <div class="row mb-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th> Id </th>
                    <th> Başlık </th>
                    <th> Yayınlanma Tarihi </th>
                    <th> Sil </th>
                    <th> Güncelle </th>
                    <th> Detaylar </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @item.Id  </td>
                        <td> @item.Title </td>
                        <td> @item.Date.ToShortDateString().ToString() </td>
                        <td> <a asp-action="Delete" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-danger"> Sil </a> </td>
                        <td> <a asp-action="Update" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-primary"> Güncelle </a> </td>
                        <td> <button type="button" class="btn btn-secondary"> Detaylar </button> </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
