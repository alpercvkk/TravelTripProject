@using TravelTripProject.Data.Entities
@using TravelTripProject.Models
@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model Comment

<h1>UpdateComment</h1>

<div class="container">

    <div class="row mb-3 ">

        @if (ViewBag.Message is not null)
        {
            <button class="btn btn-primary ">
                @ViewBag.Message
            </button>
        }
    </div>

    <form asp-action="UpdateComment" asp-controller="Admin">
        <div class="row mb-3">
            <div class="col-1">
                <label> Id: </label>
            </div>
            <div class="col-3">
                <input asp-for="Id" class="form-control" readonly="readonly" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-1">
                <label> Kullanıcı Adı: </label>
            </div>
            <div class="col-3">
                <input asp-for="UserName" class="form-control" />
                <span style="color:darkblue" asp-validation-for="UserName"></span>
            </div>

        </div>
        <div class="row mb-3">
            <div class="col-1">
                <label>E-posta:</label>
            </div>
            <div class="col-3">
                <input asp-for="Email" class="form-control" />
                <span style="color:darkblue" asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-1">
                <label>Yorum</label>
            </div>
            <div class="form-floating col-5">
                <textarea asp-for="Remark" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px">
                <span asp-validation-for="Remark"> </span>
                </textarea>

            </div>

        </div>
        <div class="row mb-3">
            <div class="col-1">
                <label> Blog Id: </label>
            </div>
            <div class="col-3">
                <input asp-for="BlogId" class="form-control" readonly="readonly" />
            </div>
        </div>
        <div class="row mb-3 justify-content-center">
            <div class="col-auto">

                <a asp-controller="Admin" asp-action="CommentList" class="btn btn-danger"> Vazgeç</a>
                <button class="btn btn-success" type="submit"> Yorumu Güncelle</button>

            </div>
        </div>





    </form>
</div>

