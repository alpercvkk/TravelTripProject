@using TravelTripProject.Data.Entities
@using TravelTripProject.Models

@{
    ViewData["Title"] = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

@model List<Comment>

<style>
    .container {
        padding-left: 80px;
        padding-right: 80px;
    }
</style>


<div class="mb-10"> <h2>Yorum Listesi </h2> </div>

<div class="container ">

    <div class="row">

        <table class="table table-striped table-hover">

            <thead>
                <tr>
                    <th> ID</th>
                    <th> Kullanıcı Adı </th>
                    <th> E-posta Adresi </th>
                    <th> Kullanıcı Yorumu</th>
                    <th> Blog Başlığı </th>
                    <th> Sil</th>
                    <th> Düzenle</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @item.Id</td>
                        <td> @item.UserName </td>
                        <td> @item.Email </td>
                        <td> @(item.Remark.Length > 80 ? item.Remark.Substring(0, 80) + "..." : item.Remark)</td>
                        <td> @item.Blog.Title </td>             
                        <td>
                            <a href="/Admin/DeleteComment/@item.Id" id="DeleteBtn" onclick="return confirm('Silmek İstediğinize Emin Misiniz?');" class="btn btn-danger"> Sil </a>
                        </td>
                        <td> <a asp-action="UpdateComment" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-warning"> Düzenle </a> </td>
                       
                    </tr>
                }
            </tbody>

        </table>

    </div>

</div>

