<body>
    <br />
    <div class="row container2" style="margin: 20px; ">
        <div class="col-md-4" style="margin-bottom: 1px;">
            <div class="contact-info">
                <div class="contact-info-item">
                    <div class="contact-info-icon">
                        <i class="fa-solid fa-map-location-dot"></i>
                    </div>
                    <div class="contact-info-text">
                        <h2>Adres</h2>
                        <span>1215 Lorem Ipsum, TR 34500 </span>
                        <span>iSTANBUL , TURKİYE </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="contact-info">
                <div class="contact-info-item">
                    <div class="contact-info-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="contact-info-text">
                        <h2>E-Posta</h2>
                        <span style="text-transform: lowercase;">info@easytrip.com</span>
                        <span style="text-transform: lowercase;">contact@easytrip.com  </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="contact-info">
                <div class="contact-info-item">
                    <div class="contact-info-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="contact-info-text ">
                        <h2>Çalışma Zamanı</h2>
                        <span>Pazartesi - Cuma  9:00 - 16:00 </span>
                        <span>Cumartesi - Pazar  10:00  - 13:00 </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <form method="post" asp-action="ContactUs" asp-controller="About">
            <ul>
                <li>
                    <label for="name"><span>Kullanıcı Adı <span class="required-star">*</span></span></label>
                    <input  asp-for="Name" type="text"  >
                    <span asp-validation-for="Name" style="text-transform: lowercase; color: grey;"></span>
                    
                </li>
                <li>
                    <label for="mail"><span>E-posta <span class="required-star">*</span></span></label>
                    <input  asp-for="Email" type="email"  >
                    <span asp-validation-for="Email" style="text-transform: lowercase; color: grey;"></span>
                </li>
                <li>
                    <label for="mail"><span>Konu <span class="required-star">*</span></span></label>
                    <input asp-for="Subject" type="text" >
                    <span asp-validation-for="Subject" style="text-transform: lowercase; color: grey;"></span>
                </li>
                <li>
                    <label for="msg"><span>Mesaj</span></label>
                    <textarea asp-for="Message" rows="4" cols="50"></textarea>
                    <span asp-validation-for="Message" style="text-transform: lowercase; color: grey;"></span>
                </li>
                <li>
                    <input type="submit">
                </li>
            </ul>
        </form>
    </div>
    <div class="contact-page-map" style="width: 100%; height: 400px; margin-top: 20px;">
