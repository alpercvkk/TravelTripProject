        .single-input-fieldsbtn input[type="submit"]:hover {
            background: #071c34;
            transition: all 0.4s ease-in-out 0s;
            border-color: #071c34
        }

    .single-input-field h4 {
        color: #464646;
        text-transform: capitalize;
        font-size: 14px;
    }

    .contact-page-form {
        display: inline-block;
        width: 100%;
